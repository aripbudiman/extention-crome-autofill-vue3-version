{
  "manifest_version": 3,
  "name": "Medical Forms - Autofill",
  "version": "1.0.0",
  "description": "Chrome Extension for app medical services",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:* http://127.0.0.1:*; object-src 'self'"
  }
}